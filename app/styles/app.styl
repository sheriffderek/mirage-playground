
$white = #FFFFFF
$black = #000000
$color = #25ACC2 // note the = instead of : for stylus variable declaration

$pad = 10px

html
  background: $color
  color: $white

.page-section
  //
  .inner-w
    max-width: 1200px
    margin-right: auto
    margin-left: auto
    padding: $pad

remove-list-styles()
  list-style: none
  margin: 0
  padding: 0

.account-list, .order-list
  remove-list-styles()
  .account
    &:not(:first-of-type)
      margin-top: $pad
    span
      opacity: .5

.ember-view
  border: 1px solid alpha($black, .2)
  border-radius: $pad*.5
  padding: $pad
  &:not(.link)
    margin-bottom: $pad

.outlet, body > .ember-view
  border: 3px solid alpha($white, .5)
  border-radius: $pad*.5
  padding: $pad

a
  display: block
  color: purple

em
  opacity: .5

.main-menu
  .item-list
    remove-list-styles()
    display: flex

.account-list
  .account
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
  .actions
    display: flex
    flex-direct: row
    align-items: center
    

.focused-input
  display: inline-block

.order-row
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  .actions
    display: flex
    flex-direction: row
    align-items: center
    button, .link
      padding-left: $pad
    .link
      display: inline-block
