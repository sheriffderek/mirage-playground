
@import '_reset'

$white = #FFFFFF
$black = #000000
$color = #25ACC2 // note the = instead of : for stylus variable declaration
$highlight = purple

$pad = 10px

html
  // background: $black
  // color: $white

body
  // background: $color
  background: lighten($black, 90%)
  padding-top: $pad*6.5 // height of .site-header.outerHeight()
  font-family: 'Roboto'

.page-section
  //
  .inner-w
    max-width: 1200px
    margin-right: auto
    margin-left: auto
    padding: $pad*.5

remove-list-styles()
  list-style: none
  margin: 0
  padding: 0

.account-list, .order-list
  remove-list-styles()
  .account
    &:not(:first-of-type)
      margin-top: $pad
    a
      color: $black

.ember-application .ember-view
  // border: 1px solid alpha($black, .2)
  border-radius: $pad*.5
  padding: $pad*.25
  border: 1px solid blue
  &:not('.link')
    margin-bottom: $pad

.ember-application .outlet, body > .ember-view
  border: 3px solid alpha($white, .5)
  border-radius: $pad*.5
  padding: $pad*.5

.ember-application .component
  border: 1px solid red
  &.page-section
    border: 1px solid blue
  &.link-to
    border: 1px solid orange

a
  display: block
  color: $highlight
  &:visited
    color: @color

em
  opacity: .5




.site-header
  position: fixed
  top: 0
  right: 0
  left: 0
  background: alpha($black, 0)
  color: $white
  transition: background .5s
  z-index: 100
  &.scrolled
    background: alpha(@background, 1)
  .inner-w
    display: flex
    flex-direction: row
    align-items: center




.main-menu
  .item-list
    remove-list-styles()
    display: flex

.account-list
  .account
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    
  .actions
    display: flex
    flex-direct: row
    align-items: center


.focused-input
  display: inline-block

input[type='text']
  padding: $pad*.5 $pad


.order-row
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  .actions
    display: flex
    flex-direction: row
    align-items: center
    button, .link
      padding-left: $pad
    .link
      display: inline-block


.area-list
  remove-list-styles()
  display: flex
  flex-direction: row
  align-items: flex-end
  height: 300px
  background: white
  padding-top: $pad*2
  padding-bottom: $pad
  .area
    display: block
    cursor: pointer
    position: relative
    transition: .5s
    border-color: alpha($black, .04)
    .indicator
      display: block
      content: 0
      width: 16px
      height: 16px
      background: white
      border-radius: 50%
      position: absolute
      top: 0
      left: 50%
      transform: translate(-50%, -50%)
      transition: .5s
    &.good
      .indicator
        background: lightgreen
    &.exceptional
      .indicator
        background: pink
    &.mediocre
      .indicator
        background: orange
    &.unacceptable
      .indicator
        background: red
        
fieldset
  .thing-list
    remove-list-styles()
  label
    display: block
    .label, input
      display: block
  header
    color: $color
  main
    //
  footer
    margin-top: $pad*2


remove-button-styles()
  margin: 0
  padding: 0
  outline: 0
  border: 0
  border-radius: 0
  background: transparent
  font-family: inherit
  font-weight: inherit
  letter-spacing: inherit

button()
  remove-button-styles()
  min-width: 200px
  padding: $pad $pad*2
  background: $color
  border-radius: $pad*.5
  transition: .2s
  span
    &:after
      content: ' >'
  &:focus
    transform: scale(1.05)
    box-shadow: 0 $pad*.25 0 0 alpha($black, .1)

.button
  button()


form
  // border: 1px solid red
  &.standard-form
    border: 1px solid blue
  input[type='text']
    padding: $pad
    // font-size: inherit
    font-size: 16px
  .thing-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
  .shipping-name-fields
    .thing-list
      display: flex
      flex-direction: row
      flex-wrap: wrap
      .thing:nth-of-type(2)
        @media (min-width: 700px)
          margin-left: $pad*2
    
.liquid-container, .liquid-child
  width: 100%
  height: 100%
  
form
  .error
    color: red

[data-ember-action], a, button, input, .link
  cursor: pointer
  &:active
    color: black
    
.link
  &.active
    color: red
  
*
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-tap-highlight-color: transparent // For some Androids
