
<h3>/create</h3>

<form {{action 'createAccount' model on='submit'}}>

  <label for="thing1">
  {{#focused-input}}
    {{input
      id="thing1"
      class="name focused" 
      value=model.firstName 
      placeholder="First name"
    }}
  {{/focused-input}}
  </label>

  <label for="thing2">
    {{input
      id="thing2"
      class="name focused" 
      value=model.lastName 
      placeholder="Last name"
    }}
  </label>

  <button type='submit'>Create account</button>

  {{#if model.slug}}
    <div>{{model.slug}}</div>
  {{/if}}
</form>

