
{{#each accounts as |account|}} {{log account}}
  <li class="account">
    <h4>
      <span>{{account.lastName}}, {{account.firstName}}</span>
      {{#if account.subscriptions}}
        <span><em>({{account.subscriptions.length}}) subscriptions</em></span>
      {{else}}
        <span><em>inactive</em></span>
      {{/if}}
    </h4>

    <div class="actions">
      {{#link-to 'accounts.detail' account}}
        <span>View details</span>
      {{/link-to}}

      <button {{action 'accountSignIn' account}}>Sign In</button>
    </div>
  </li>
{{/each}}
